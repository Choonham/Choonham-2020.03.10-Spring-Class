package com.choonham;

public class MethodClass {

	public MethodClass() {
	}
	
	public void search(String inputString) {
		DataClass dc = new DataClass();
		for(int i = 0; i < dc.bcArray.length; i++) {
			if(dc.bcArray[i].title.contains(inputString)) {
				System.out.println(dc.bcArray[i].title + "의 정보:");
				System.out.println(dc.bcArray[i].author);
				System.out.println(dc.bcArray[i].press);
				System.out.println(dc.bcArray[i].price);
				System.out.println(dc.bcArray[i].image);
				System.out.println(dc.bcArray[i].dc);
			}
		}
	}

}
